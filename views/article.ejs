        var $btn = $(".layui-btn-disabled");
        $.ajax({
            method : "POST",
            url : "/ifLogin",
            success : function(data){
                if(!data.code){
                    $area.prop({
                        "disabled":false,
                        placeholder : "请输入评论"
                    });
                    $btn.removeClass("layui-btn-disabled");
                }
            }
        });
