        <script>
            $(function(){
                var $hf = $(".comment-show .hf");
                $hf.click(function () {
                    $(this).parents(".first-comment").toggleClass("showForm");
                });
            });
        </script>

        <div class="comment-add">
            <form class="layui-form">
                <div class="layui-form-item layui-form-text">
                    <div class="layui-input-block" style="margin-left: 0">
                        <textarea disabled name="desc" placeholder="请先登录再进行评论" class="layui-textarea comment-area"></textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block" style="margin-left: 0">
                        <button type="button" class="layui-btn layui-btn-disabled" lay-submit lay-filter="add">发表评论</button>
                    </div>
                </div>
            </form>
        </div>
        <script>

            layui.use(['form'], function(){
                var form = layui.form;

                form.on("submit(add)",function (data) {
                    if($(".comment-area").prop("disabled"))return false;
                    $.ajax({
                        method : "POST"
                        ,url : "/comment"
                        ,data : {articleId:articleId,content:data.field.desc}
                        ,dataType : "json"
                        ,success : function(data){
                            if(data.code){
                                layer.msg(
                                    data.msg,
                                    {icon:5,time:1000}
                                )
                            }else{
                                layer.msg(
                                    data.msg,
                                    {icon:1,time:1000},
                                    function(){
                                        window.location.reload();
                                    }
                                )
                            }
                        }
                    });

                    return false;
                });

                form.on("submit(hf)",function (data) {
                    if($(".comment-area").prop("disabled"))return false;
